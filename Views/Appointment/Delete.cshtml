@model CuttingEdge.Models.Appointments
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<p>
    Are you sure you would like to delete this This?
</p>
<ul>
    <li>Title:       @Model.FirstName</li>
    <li>Title:       @Model.LastName</li>
    <li>Title:       @Model.Phone</li>
    <li>Title:       @Model.Date</li>
    <li>Description: @Model.Description</li>
</ul>
@using (Html.BeginForm("DoDelete", "Appointment", FormMethod.Post))
{

    @Html.HiddenFor(m => m.Id)
    <input type="submit" class="btn btn-danger" value="Yes, Delete it!" />
    @Html.ActionLink("No, back to appointments", "Index")
}